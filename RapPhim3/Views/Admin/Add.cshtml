@{
    ViewData["Title"] = "Add Movie ";
}
@section Styles {
    <link rel="icon" href="~/imagescinema-logo.png" type="image/png">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Roboto:400,700" />
    <link rel="stylesheet" href="~/css/fontawesome.min.css" />
    <link rel="stylesheet" href="webfonts/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" type="text/css" href="https://npmcdn.com/flatpickr/dist/themes/material_orange.css">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="~/css/addMovie.css">
    <style>
        input, textarea {
            border: 1px solid #ccc;
            padding: 8px;
            width: 100%;
            border-radius: 5px;
        }

        select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background: white;
        }

        option {
            padding: 5px;
        }
    </style>

}

<div class="line-default"></div>
<div class="container-fluid wrapper">
    <div class="container update-box">
        <p>NHẬP THÔNG TIN PHIM</p>
        <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row tm-edit-product-row">
                <div class="col-xl-6 col-lg-6 col-md-12">
                    <form action="" class="tm-edit-product-form">
                        <div class="subform-group">
                            <label for="movieTitle">Tên phim</label>
                            <input type="text" id="movieTitle">
                        </div>

                        <div class="subform-group">
                            <label for="description">Mô tả</label>
                            <textarea id="description" cols="30" rows="5"></textarea>
                        </div>

                        <div class="search-content-item">
                            <div class="date">
                                <label for="releaseDate">Ngày ra mắt</label>
                                <input type="date" id="releaseDate">
                            </div>
                          
                        </div>

                        <div class="subform-group">
                            <label for="duration">Thời lượng (phút)</label>
                            <input type="number" id="duration" min="1">
                        </div>

                        <div class="subform-group">
                            <label for="director">Đạo diễn</label>
                            <input type="text" id="director">
                        </div>

                        <div class="subform-group">
                            <label for="actors">Diễn viên</label>
                            <input type="text" id="actors">
                        </div>

                        <div class="subform-group">
                            <label for="genres">Thể loại</label>
                            <select id="genres" multiple>
                                <option value="1">Hành động</option>
                                <option value="2">Kinh dị</option>
                                <option value="3">Hài</option>
                                <option value="4">Lãng mạn</option>
                                <option value="5">Viễn tưởng</option>
                            </select>
                        </div>

                        <div class="subform-group">
                            <label for="country">Quốc gia</label>
                            <select id="country">
                                <option value="">Chọn quốc gia</option>
                                <option value="1">Việt Nam</option>
                                <option value="2">Mỹ</option>
                                <option value="3">Hàn Quốc</option>
                                <option value="4">Nhật Bản</option>
                            </select>
                        </div>

                        <div class="subform-group">
                            <label for="portraitImage">Ảnh dọc (URL)</label>
                            <input type="text" id="portraitImage">
                        </div>

                        <div class="subform-group">
                            <label for="landscapeImage">Ảnh ngang (URL)</label>
                            <input type="text" id="landscapeImage">
                        </div>

                        <div class="subform-group">
                            <label for="trailerUrl">Trailer (URL)</label>
                            <input type="text" id="trailerUrl">
                        </div>

                        <div class="optionBtn">
                            <button type="submit" class="btn btn-primary addBtn">Thêm phim</button>
                        </div>
                    </form>

                </div>
                
            </div>
            
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr("#myID", {
            dateFormat: "d-m-Y",
        });
    </script>
    <script>
        let inputBox = document.querySelector(".input-box"),
            searchIcon = document.querySelector(".icon"),
            closeIcon = document.querySelector(".close-icon");
        searchIcon.addEventListener("click", () => inputBox.classList.add("open"));
        closeIcon.addEventListener("click", () => inputBox.classList.remove("open"));
    </script>
}