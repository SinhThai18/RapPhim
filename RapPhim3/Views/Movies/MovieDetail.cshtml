@model RapPhim3.Models.Movie

    <div class="container-fluid wrapper">
        <div class="mv-trailer">
            <img src="@Model.LandscapeImage" alt="" class="mv-img">
            <div class="trailer-btn">
                <a href="#trailer" class="accordion-toggle" data-bs-toggle="modal" data-bs-target="#trailer" aria-expanded="false" target="_blank">
                    <img src="~/images/button-play.2f9c0030.png" alt="" class="play-img object-cover" loading="lazy">
                </a>
            </div>
            <div class="modal fade modal-lg" id="trailer">
                <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                        <div class="ratio ratio-16x9" style="max-width: 560px; margin: auto;">
                            <iframe src="@Model.TrailerUrl"
                                    frameborder="0"
                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                    sandbox="allow-same-origin allow-scripts allow-popups">
                            </iframe>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="content">
            <div class="row content-wrapper">
                <div class="col-md-9 left">
                    <div class="row mv-detail">
                        <div class="col-md-4 poster">
                            <img src="@Model.PortraitImage" alt="" class="mv-poster">
                        </div>
                    <div class="col-md-8 mv-infor">
                        <div class="row mv-name text-truncate">@Model.Title</div>

                        <div class="row mv-time d-flex">
                            <div class="col-auto duration d-flex align-items-center">
                                <svg width="14" height="14" fill="none" class="mr-1">
                                    <path d="..." fill="#F58020"></path>
                                </svg>
                                <span>@Model.Duration</span>
                            </div>
                            <div class="col-auto release-date d-flex align-items-center">
                                <svg width="12" height="14" fill="none" class="mr-1">
                                    <path d="..." fill="#F58020"></path>
                                </svg>
                                <span>@Model.ReleaseDate</span>
                            </div>
                        </div>

                        <div class="row mv">
                            <div class="row mv-country">
                                <div class="col-md-2 d">Quốc gia:</div>
                                <div class="col-md-3 nation-item">@Model.Country.Name</div>
                            </div>

                            <div class="row align-items-center">
                                <div class="col-md-2 d">Thể loại:</div>
                                <div class="col-md-10">
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var genre in Model.Genres)
                                        {
                                            <button type="button" class="btn btn-outline-primary">
                                                <a href="#" class="list-item">@genre.Name</a>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="row align-items-center">
                                <div class="col-md-2 d">Đạo diễn:</div>
                                <div class="col-md-10">
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var dir in Model.Directors)
                                        {
                                            <button type="button" class="btn btn-outline-primary">
                                                <a href="#" class="list-item">@dir.Name</a>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="row align-items-center">
                                <div class="col-md-2 d">Diễn viên:</div>
                                <div class="col-md-10">
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var ac in Model.Actors)
                                        {
                                            <button type="button" class="btn btn-outline-primary">
                                                <a href="#" class="list-item">@ac.Name</a>
                                            </button>
                                        }
                                    </div>
                                </div>
                            </div>
