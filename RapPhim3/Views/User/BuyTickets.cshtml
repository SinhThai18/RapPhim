@{
    ViewData["Title"] = "Buy Ticket";
}

@section Styles {
    <link rel="stylesheet" href="~/css/bookticket.css" />
}
<div class="container mt-4">
    <div class="card p-4">
        <h4 class="fw-bold">Chọn phim - Thanh Xuân 18x2: Lữ Trình Hướng Về Em</h4>

        <!-- Chọn suất -->
        <div class="mt-3">
            <h5 class="fw-bold">Chọn suất</h5>
            <div class="d-flex gap-2 mt-2">
                <button class="btn btn-outline-primary active">Thứ Năm 13/06</button>
                <button class="btn btn-outline-primary">Thứ Sáu 14/06</button>
                <button class="btn btn-outline-primary">Thứ Bảy 15/06</button>
            </div>
            <div class="mt-3">
                <button class="btn btn-primary">09:30</button>
                <button class="btn btn-outline-secondary">23:15</button>
            </div>
        </div>

        <!-- Chọn ghế -->
        <div class="mt-4">
            <h5 class="fw-bold">Chọn ghế</h5>
            <div class="seat-grid">
                <div class="row">
                    <button class="seat">1</button>
                    <button class="seat">2</button>
                    <button class="seat occupied">5</button>
                    <button class="seat">6</button>
                </div>
                <div class="row">
                    <button class="seat">3</button>
                    <button class="seat">4</button>
                    <button class="seat occupied">8</button>
                    <button class="seat">9</button>
                </div>
            </div>
        </div>

        <!-- Thông tin đặt vé -->
        <div class="summary mt-4 p-3 border rounded">
            <div class="d-flex align-items-center">
                <img src="movie-poster.jpg" class="movie-poster me-3" alt="Poster phim">
                <div>
                    <h6 class="fw-bold">Thanh Xuân 18x2: Lữ Trình Hướng Về Em</h6>
                    <p class="mb-1">Ohayou Đà Nẵng - RAP 4</p>
                    <p class="mb-1">Suất: 09:30 - Thứ Năm, 13/06/2024</p>
                    <p class="fw-bold">Ghế: <span id="selected-seats">A5, A6</span></p>
                </div>
            </div>
            <hr>
            <div class="d-flex justify-content-between fw-bold">
                <span>Tổng cộng</span>
                <span>120,000 đ</span>
            </div>
        </div>

        <!-- Nút hành động -->
        <div class="mt-3 d-flex justify-content-between">
            <button class="btn btn-secondary">Quay lại</button>
            <button class="btn btn-warning">Tiếp tục</button>
        </div>
    </div>
</div>
